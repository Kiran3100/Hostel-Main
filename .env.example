# ================================================================
# HOSTEL MANAGEMENT SAAS - ENVIRONMENT CONFIGURATION EXAMPLE
# ================================================================
# Copy this file to .env and update values for your environment

# ================================================================
# GENERAL APPLICATION SETTINGS
# ================================================================
PROJECT_NAME=Hostel Management SaaS API
PROJECT_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
HOST=0.0.0.0
PORT=8000
TIMEZONE=Asia/Kolkata

# ================================================================
# DATABASE SETTINGS
# ================================================================
DATABASE_URL=postgresql://postgres:0987654321@localhost:5432/HostelDb
DATABASE_ECHO=false

# ================================================================
# SECURITY SETTINGS
# ================================================================
JWT_SECRET_KEY=your-super-secret-key-at-least-32-characters-long-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# ================================================================
# EMAIL SETTINGS
# ================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourhostel.com

# ================================================================
# SMS SETTINGS
# ================================================================
SMS_PROVIDER=msg91
MSG91_API_KEY=your-msg91-api-key
MSG91_SENDER_ID=your-sender-id

# ================================================================
# FILE STORAGE
# ================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=[".jpg",".jpeg",".png",".pdf"]

# ================================================================
# CACHE SETTINGS
# ================================================================
CACHE_BACKEND=memory
REDIS_URL=redis://localhost:6379/0

# ================================================================
# MONITORING
# ================================================================
LOG_LEVEL=INFO
SENTRY_DSN=

# ================================================================
# PAYMENT GATEWAYS
# ================================================================
CURRENCY=INR
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ================================================================
# BUSINESS LOGIC
# ================================================================
BOOKING_ADVANCE_DAYS=365
ADVANCE_PAYMENT_PERCENTAGE=20
NOTIFICATION_REMINDER_HOURS=[72,24,2]